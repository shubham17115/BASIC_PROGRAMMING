#include <stdio.h>
void arithmeticOp(int a, int b);
int main()
{   
    int a,b,n;
  printf("Enter number A:");
  scanf("%d",&a);
  printf("Enter number B:");
  scanf("%d",&b);
  for(int i=1;i<=4;i++)
  {
      arithmeticOp(a,b);
  }
}
 void arithmeticOp(int x, int y){
     int n;
  printf("Arithmetic operations:\n1.Addition\n2.Subtraction\n3.multiplication\n4.division\n");

      printf("Enter your choice(between1-4):");
      scanf("%d",&n);
     switch(n)
  {
      case 1: printf("%d\n",(x+y));
      break;
      case 2: printf("%d\n",(x-y));
      break;
      case 3: printf("%d\n",(x*y));
      break;
      case 4: printf("%d\n",(x/y));
      break;
      default: printf("Wrong choice");
      
  }
 }     
      
  
